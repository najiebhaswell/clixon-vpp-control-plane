#!/bin/bash
set -e

case "$1" in
    purge)
        # Remove config files
        rm -rf /etc/clixon
        rm -rf /var/lib/clixon
        rm -f /etc/ld.so.conf.d/clixon-vpp.conf
        ldconfig
        
        # Remove user/group (optional - commented out by default)
        # userdel clixon 2>/dev/null || true
        # groupdel clixon 2>/dev/null || true
        
        systemctl daemon-reload || true
        ;;
    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        rm -f /etc/ld.so.conf.d/clixon-vpp.conf
        ldconfig
        ;;
    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

exit 0
